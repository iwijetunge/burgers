<h1>Burgers</h1>

<h2>Not Eatten!</h2>

<ul>
  {{#each burger_data}}
    {{#unless this.devoured}}
      {{!-- {{> cats/cat-block sleep=true}} --}}
      <div>{{this.id}} {{this.burger_name}}</div>
      <button class="devour" id={{this.id}}>Devour</button>
    {{/unless}}
  {{/each}}
</ul>

<h2>Eatten!</h2>

<ul>
  {{#each burger_data}}
    {{#if this.devoured}}
      {{!-- {{> cats/cat-block sleep=false}} --}}
      <div>{{this.id}} {{this.burger_name}}</div>
    {{/if}}
  {{/each}}
</ul>

<h2>Create a burger!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burger-create" name="name">
  </div>

  

  <button id="create-button" type="submit">Add Burger</button>
</form>
